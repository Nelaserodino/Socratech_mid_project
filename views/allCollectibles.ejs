<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Play-back</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/allCollectibles.css" />
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <script
      src="https://kit.fontawesome.com/76b2ab3789.js"
      crossorigin="anonymous"
    ></script>
  </head>

  <body>
    <%- include('navbar') %>

    <section class="section1-collectibles">
      <svg
        class="top"
        version="1.1"
        xmlns="http://www.w3.org/2000/svg"
        xmlns:xlink="http://www.w3.org/1999/xlink"
        x="0px"
        y="0px"
        viewBox="0 0 1440 48"
        xml:space="preserve"
        alt=""
        aria-hidden="true"
      >
        <path d="M1440,48H0V0c0,0,205,47,720,47s720-46.9,720-46.9V48z"></path>
      </svg>
      <h2>
        <span> Explore the </span>
        <div>
          <span>Treasures</span>
        </div>
      </h2>
      <div class="d-flex flex-wrap justify-content-center mt-5">
        <% resultCollectibles.forEach( collectible => { %>
        <div class="card collectible_card" style="width: 18rem">
          <a href="/collector/oneCollector/<%= collectible.collector_id %>">
            <% if(collectible.item_img != "add_picture_icon.png") { %>
            <img
              src="/images/collectibles/<%= collectible.item_img %>"
              class="card-img-top"
              alt="..."
            />
            <% } else { %>
            <img
              src="/images/collectibles/add-pic.jpeg"
              class="card-img-top"
              alt="..."
            />
            <% } %>
          </a>

          <div class="card-body">
            <h5 class="card-title"><%= collectible.item_name %></h5>
          </div>
        </div>
        <% }) %>
      </div>
    </section>
    <footer><%- include('footer') %></footer>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
      AOS.init();
    </script>
  </body>
</html>
