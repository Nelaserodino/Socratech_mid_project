<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Play-Back</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/oneCollector.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,0,0"
    />
    <script
      src="https://kit.fontawesome.com/76b2ab3789.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <%- include('navbar') %>

    <section class="justify-content-center row m-0">
      <div class="collector-card col-sm-10 col-lg-8">
        <div class="card collector_img col-sm-5">
          <% if(finalResult.collector_img != "avatar.jpeg") { %>
          <img
            src="/images/collectors/<%= finalResult.collector_img %>"
            class="card-img-top"
            alt="..."
          />
          <% } else { %>
          <img
            src="/images/collectors/avatar.png"
            class="card-img-top"
            alt="..."
          />
          <% } %>
        </div>
        <div class="card-body collector_description">
          <h4 class="card-title">
            <span>Name:</span> <%= finalResult.collector_name %>
          </h4>
          <h4 class="card-title">
            <span>Surname:</span> <%= finalResult.surname %>
          </h4>
          <p class="card-title">
            <span>My interests:</span> <%= finalResult.interests %>
          </p>
          <p class="card-title">
            <span>About my collection:</span> <%=
            finalResult.collection_description %>
          </p>
          <p class="card-title"><span>Email:</span> <%= finalResult.email %></p>
          <p class="card-title"><span>Phone:</span> <%= finalResult.phone %></p>
          <p class="text-center">
            <span>Contact me if interested in any of my products!</span>
          </p>
          <div class="d-flex justify-content-center">
            <button class="edit">
              <a
                href="/collector/oneCollector/editCollector/<%= finalResult.collector_id %>"
                >Edit info</a
              >
            </button>
            <button class="delete">
              <a
                onclick="return confirm('Are you sure you want to delete this item')"
                href="/collector/oneCollector/delete/<%= finalResult.collector_id %>"
                >Delete account</a
              >
            </button>
          </div>
        </div>
      </div>
    </section>

    <section class="section2-collectibles">
      <div class="d-flex justify-content-center align-items-center">
        <a href="/collectible/addCollectible/<%= finalResult.collector_id %>"
          ><span class="material-symbols-rounded icon-add">
            add_circle
          </span></a
        >
        <h2>Add your collectible</h2>
      </div>

      <div class="d-flex justify-content-center flex-wrap">
        <% finalResult.collectible.forEach(collectible => { %>
        <div class="card m-3 hover card-collectible d-flex">
          <div class="collectible-img">
            <% if(collectible.item_img != "add_picture_icon.png") { %>
            <img
              src="/images/collectibles/<%= collectible.item_img %>"
              class="card-img-top"
              alt="..."
            />

            <% } else { %>
            <img
              src="/images/collectibles/add-pic.jpeg"
              class="card-img-top"
              alt="..."
            />
            <% } %>
          </div>
          <div class="card-body collectible-description">
            <h5 class="card-title"><%= collectible.item_name %></h5>
            <h6 class="card-title"><%= collectible.item_description %></h6>
            <h6 class="card-title"><%= collectible.price %> U$D</h6>
            <div class="d-flex">
              <button class="edit">
                <a
                  href="/collectible/editCollectible/<%= collectible.item_id %>"
                  ><span class="material-symbols-rounded"> edit </span></a
                >
              </button>
              <button class="delete">
                <a
                  onclick="return confirm('Are you sure you want to delete this item')"
                  href="/collectible/deleteCollectible/<%= collectible.item_id %>/<%= finalResult.collector_id %>"
                  ><span class="material-symbols-rounded"> delete </span></a
                >
              </button>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </section>
    <footer><%- include('footer') %></footer>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
